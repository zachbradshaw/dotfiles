" enable syntax highlighting
syntax enable

" one dark theme
colorscheme onedark

" show line numbers
set number

" no beeping
set noerrorbells
set visualbell

" show ruler
set ruler

" make backspace work
set backspace=2

" indentation preferences
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=4

" ENABLE OMNIFUNC SYNTAX COMPLETION
 set omnifunc=syntaxcomplete#Complete
